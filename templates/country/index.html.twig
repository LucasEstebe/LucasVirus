{% extends 'base.html.twig' %}

{% block title %}Country index{% endblock %}

{% block body %}
    <h1>Country index</h1>

    <table class="table table-dark">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for country in countries %}
            <tr>
                <td>{{ country.id }}</td>
                <td>{{ country.name }}</td>
                <td>
                    <a class="text-white" href="{{ path('country_show', {'id': country.id}) }}"><i class="fa fa-eye" aria-hidden="true"></i></a>
                    <a class="text-white" href="{{ path('country_edit', {'id': country.id}) }}"><i class="fa fa-pencil" aria-hidden="true"></i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('country_new') }}" class="btn btn-success"><i class="fa fa-plus" aria-hidden="true"></i> Create new</a>
{% endblock %}
